{% extends 'basefront.html.twig' %}

{% block body %}
<section id="main-content">
      <section class="wrapper">
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
          <div class="col-lg-6 col-md-6 col-sm-6">
    <div class="send-message">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>Modifier Mon profile</h2>
            </div>
          </div>
          <div class="col-md-8">
            <div class="contact-form">
              <form id="contact" action="" method="post">
              {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
              
                <div class="row">
                 
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                     {{ form_errors(form.nom) }}
                     {{ form_widget(form.nom,{'attr': {'class': 'form-control' , 'placeholder' : 'Nom'}}) }}
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                    {{ form_errors(form.prenom) }}
                     {{ form_widget(form.prenom,{'attr': {'class': 'form-control' , 'placeholder' : 'Prenom'}}) }}
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                    {{ form_errors(form.bday) }}
                     {{ form_widget(form.bday,{'attr': {'class': 'form-control' , 'placeholder' : 'Date de naissance'}}) }}
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                    {{ form_errors(form.genre) }}
                     {{ form_widget(form.genre,{'attr': {'class': 'form-control' , 'placeholder' : 'genre'}}) }}
                    </fieldset>
                  </div>
                  
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                    {{ form_errors(form.email) }}
                     {{ form_widget(form.email,{'attr': {'class': 'form-control' , 'placeholder' : 'Email'}}) }}
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                    {{ form_errors(form.domaine) }}
                     {{ form_widget(form.domaine,{'attr': {'class': 'form-control' , 'placeholder' : 'Domaine'}}) }}
                    </fieldset>
                  </div>
                  
                               <br></br>
                  <div class="row row-space">
                      <div class="col-2">
                        <div class="input-group">
                        <br></br>
                        {{ form_widget(form.Modifier,{'attr': {'class': 'btn btn-danger ', 'placeholder' : 'Modifier'}}) }}

                        </div>
                         </div>
                         
                </div>
              </form>
              {{ form_end(form) }}
            </div>
          </div>
          </div>
</div>
</section>
{% endblock %}
