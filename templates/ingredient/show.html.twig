{% extends 'front.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <h1>Ingredient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ingredient.nom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ ingredient.image }}</td>
            </tr>
            <tr>
                <th>Calorie</th>
                <td>{{ ingredient.calorie }}</td>
            </tr>
            <tr>
                <th>Unite</th>
                <td>{{ ingredient.unite }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ingredient_index') }}">back to list</a>

    <a href="{{ path('ingredient_edit', {'id': ingredient.id}) }}">edit</a>

    <form method="post" action="{{ path('ingredient_delete', {'id': ingredient.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <button class="btn">Delete</button>
    </form>

{% endblock %}
